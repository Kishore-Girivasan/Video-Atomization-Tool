generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id Int @id @default(autoincrement())
  filePath String
  createdAt DateTime @default(now())
  clips Clip[]
}

model Clip {
  id Int @id @default(autoincrement())
  videoId Int
  startTime Int
  endTime Int
  orientation String
  title String?
  filePath String
  createdAt DateTime @default(now())

  video Video @relation(fields: [videoId], references: [id])
}
